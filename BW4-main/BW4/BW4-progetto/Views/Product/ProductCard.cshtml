@model BW4_progetto.Models.Product

<div class="col-lg-3 col-md-4 col-sm-6 mb-4">
    <div class="card h-100">
        <div class="image-container">
            <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Name">
        </div>
        <div class="card-body">
            <h2 class="card-title">
                <a href="#" class="product-link" data-id="@Model.ProductId">@Model.Name</a>
            </h2>
            <p class="card-text price">$@Model.Price</p>
            <div class="icons">
                <div class="icon"><i class="fas fa-star"></i></div>
                <div class="icon"><i class="fas fa-heart"></i></div>
            </div>
        </div>
        <div class="card-footer">
            <a href="#" class="btn btn-cart product-link" data-id="@Model.ProductId">View Details</a>
        </div>
    </div>
</div>
