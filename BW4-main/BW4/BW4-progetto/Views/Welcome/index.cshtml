@{
    ViewData["Title"] = "Welcome Page";
}

<div class="container-fluid">
    <div class="row d-flex justify-content-center">
        
        <main role="main" class="col-md-9 ml-sm-2 col-lg-10 px-4 main-content">
            <div class="jumbotron">
  
                <img src="/asset/Giallo_Professionale_Gradiente_Tecnologia_Comunicazione_Interna_Sito_Web_2.jpg" alt="Alternate Text" />
            </div>

            <!-- Carousel -->
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="2000">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100 h-100" src="/asset/Carosello1.png" alt="First slide">
                       
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 h-100" src="/asset/Carosello2.png" alt="Second slide">
                       
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 h-100" src="/asset/Carosello3.png" alt="Third slide">
                        
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 h-100" src="/asset/Carosello 4.png" alt="Fourth slide">
                       
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 h-100" src="~/asset/carosello 5.png" alt="Fifth slide">
                        
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <!-- End of Carousel -->
           

            <div class="row mt-4">
                <div class="col-md-6">
                    <div class="card">
                        <img class="card-img-top" src="/asset/Summer_Sale_Banner.jpg" alt="Card image cap">
                       
                        <div class="card-body">
                            <p class="card-text">Summer Sale: Up to 50% Off</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <img class="card-img-top" src="/asset/A_collection_of_the_most_trending_electronic_produ_1.jpg" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">Trending & Hot: A collection of most trending items.</p>
                        </div>
                    </div>
                </div>
                <!------------------------------------------->
                

                <!------------------------------------------->



                <div class="col-md-6">
                    <div class="card">
                        <img class="card-img-top" src="/asset/Exclusive_Deals__Limited_time_offers_on_electronic.jpg" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">Exclusive Deals: Limited time offers.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <img class="card-img-top" src="/asset/Buy_it_for_the_first_time__New_in_store.jpg" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">Buy it for the first time: New in store.</p>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

